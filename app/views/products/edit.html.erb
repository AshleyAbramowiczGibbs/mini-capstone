<h1>Edit your Dress</h1>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div> Name: <br>
    <input type="text" name="name" value="<%= @product.name %>"></div>
  <div> Description: <input type="text" name="description" value="<%= @product.description %>"></div>
  <div> size: <input type="text" name="size" value="<%= @product.size %>"></div>
  <div> color_one: <input type="text" name="color_one" value="<%= @product.color_one %>"></div>
  <div> color_two: <input type="text" name="color_two" value="<%= @product.color_two %>"></div>
  <div> brand: <input type="text" name="brand" value="<%= @product.brand %>"></div>
  <div> length: <select name="length" value="<%= @product.length %>">
    <option value="mini"></option>
    <option value="short"></option>
    <option value="midi"></option>
    <option value="long"></option>
  </select>
  </div>
  <div> condition: <input type="text" name="condition" value="<%= @product.condition %>"></div>
  <div> original_price: <input type="text" name="original_price" value="<%= @product.original_price %>"></div>
  <div> selling_price: <input type="text" name="selling_price" value="<%= @product.selling_price %>"></div>
  <div> supplier_id: <select name="supplier_id"
    <option value="" value=></option>
    ></select>
  </div>
<input type="submit" value="Update Your Product!">  
</form>